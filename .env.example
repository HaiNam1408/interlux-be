# Example environment variables for Interlux backend
# Copy this file to `.env` and fill in real values before running the app.

# Database (Postgres) connection string. Example format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://db_user:db_password@localhost:5432/interlux_db?schema=public"

# App port
PORT=3000

# JWT secrets and expirations
JWT_SECRET=your_jwt_secret_here
EXPIRES_ACCESS_TOKEN=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
EXPIRES_REFRESH_TOKEN=7d

# Client URL (frontend)
CLIENT_URL=http://localhost:5173

# Redis config
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Email (SMTP) credentials for sending emails
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Public API base URL (used in emails, webhooks, etc.)
API_URL=http://localhost:3000